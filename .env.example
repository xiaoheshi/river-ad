# River-AD 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 应用基本配置
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=riverad
DB_USERNAME=riverad
DB_PASSWORD=riverad123
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
SQL_LOG_LEVEL=WARN
BIND_LOG_LEVEL=WARN

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# JWT 配置
JWT_SECRET=your-secret-key-here-change-in-production-minimum-256-bits
JWT_EXPIRATION=86400000

# 前端配置
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_APP_NAME=River-AD

# CORS 配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 日志配置
LOG_LEVEL=INFO

# 联盟营销配置
AFFILIATE_CLICK_TRACKING_ENABLED=true
AFFILIATE_CONVERSION_TRACKING_ENABLED=true
DEFAULT_COMMISSION_RATE=0.05

